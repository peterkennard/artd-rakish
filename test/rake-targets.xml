<?xml version="1.0" encoding="UTF-8"?>
<project name="rake-targets" default="">

    <import file="./call-rake.xml"  />


    <target name="showprops">
        <echoproperties/>
    </target>

    <target name="resources" description="install resources in runtime area">
        <call-rake target="resources" />
    </target>

    <target name="compile" description="compile code">
        <call-rake target="compile" />
    </target>

    <target name="libs" description="build jar and library files">
        <call-rake target="libs" />
    </target>

    <target name="dist" description="build jar distribution files and installars">
        <call-rake target="dist" />
    </target>

    <target name="z-deploy-servlets" description="deploy all servlets">
        <call-rake target="deploy" />
    </target>

    <target name="z-undeploy-servlets" description="undeploy all servlets">
        <call-rake target="undeploy" />
    </target>

    <target name="deploy-ama" description="deploy ama only">
        <call-rake target="airo-ama:deploy" />
    </target>

    <target name="undeploy-ama" description="undeploy ama only">
        <call-rake target="airo-ama:undeploy" />
    </target>

</project>
